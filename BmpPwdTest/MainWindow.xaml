<Window x:Class="BmpPwdTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BmpPwdTest"
        mc:Ignorable="d"
        Title="BmpPwd Test" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="UnencryptedBox" Width="150" Height="20"
                 VerticalAlignment="Top" HorizontalAlignment="Left"
                 Margin="30" KeyDown="UnencryptedBox_OnKeyDown"></TextBox>
        <Button Margin="190,30,30,30" Height="20"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Click="EncryptButton_OnClick">Encrypt</Button>
        <Button Margin="240,30,30,30" Height="20"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            Click="SaveButton_OnClick">Save</Button>
        
        <Image Margin="30,60,30,30" x:Name="EncryptedImage"></Image>
    </Grid>
</Window>
